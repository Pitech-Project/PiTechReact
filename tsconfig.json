{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017"
  },
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "types/global.d.ts",
    ".next/types/**/*.ts",
    "custom-elements.d.ts",
    "src",
    "types"
  ],
  // "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "custom-elements.d.ts"]
  "exclude": ["node_modules"]
}
